{
  "name": "vue-offcanvas",
  "description": "Showing off-canvas menu effects stylishly with Vue.js",
  "version": "1.0.0",
  "author": "Irfan Maulana <irfan.maulana@gdn-commerce.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --color --open --config webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --config webpack.config.dev.js",
    "pack": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "dist": "npm run build && npm run pack",
    "test": "./node_modules/.bin/jest --coverage"
  },
  "dependencies": {
    "vue": "^2.5.13"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "compression-webpack-plugin": "^1.1.3",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "es6-promise": "^4.2.2",
    "eslint": "^4.15.0",
    "eslint-plugin-vue": "4.2.0",
    "jest": "^22.1.1",
    "vue-jest": "^1.4.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.10",
    "postcss-url": "^7.3.0",
    "url-loader": "0.6.2",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "vue-test-utils":"^1.0.0-beta.11",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0"
  },
  "eslintIgnore": [
    "test/*.js",
    "dist/*.js",
    "node_modules"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ]
  },
  "jest": {
    "mapCoverage": true,
    "coverageDirectory": "test/coverage",
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  }
}
